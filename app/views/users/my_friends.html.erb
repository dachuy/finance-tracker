<%= render 'friends/lookup' %>

<% if @friendships.size >0 %>
      <table class="table table-striped">
            <thead>
                  <tr>
                        <th>Name</th>
                        <th>Symbol</th>
                        <th>Current price</th>
                        <th>Actions</th>
                  </tr>
            </thead>
            <tbody>
                  <% @friendships.each do |friend| %>
                    <tr>
                          <td><%= friend.full_name %> </td>
                          <td><%= friend.email %> </td>
                          <td>
                                <%= link_to "View Profile", user_path(friend), class: "btn btn-primary btn-xs" %>
                                <%= link_to "Remove friend",
                                      friendship_path(friend),
                                      :method => :delete,
                                      :data => {:confirm => "Are you sure?"},
                                      :class => "btn btn-danger btn-xs" %>
                          </td>
                          
                    </tr>
                  <% end %>
            </tbody>
      </table>
<% else %>

<div class="lead">You don't have any friends yet. Please add some!</div>
<% end %>
